<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE struts PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
        "http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>
    <package name="common-private" extends="private">
        <!-- application welcome page -->
        <action name="welcome">
            <result name="login" type="tiles">welcomepage.tiles</result>
            <result name="success" type="redirect">userpage.action</result>
        </action>
        <!-- login input page -->
        <action name="entrance">
            <result name="login" type="tiles">entrance.tiles</result>
            <result name="success" type="redirect">userpage.action</result>
        </action>
        <!-- userpage -->
        <action name="userpage" class="com.exadel.friendface.actions.UserPage">
            <result name="success" type="tiles">userpage.tiles</result>
            <result name="login" type="tiles">entrance.tiles</result>
        </action>
        <!-- logout -->
        <action name="logout" class="com.exadel.friendface.actions.Logout">
            <result name="success" type="tiles">welcomepage.tiles</result>
            <result name="login" type="tiles">welcomepage.tiles</result>
        </action>
    </package>
    <package name="common-public" extends="public">
        <!-- some information / error page -->
        <action name="infopage">
            <result name="success" type="tiles">infopage.tiles</result>
        </action>
        <!-- registration input page -->
        <action name="registration">
            <result name="success" type="tiles">registration.tiles</result>
        </action>
        <!-- registration -->
        <action name="register" class="com.exadel.friendface.actions.Register">
            <result name="success" type="tiles">infopage.tiles</result>
            <result name="input" type="tiles">registration.tiles</result>
            <result name="error" type="tiles">infopage.tiles</result>
        </action>
        <!-- login -->
        <action name="login" class="com.exadel.friendface.actions.Login">
            <interceptor-ref name="myTokenStack"/>
            <result name="success" type="redirect">userpage.action</result>
            <result name="input" type="tiles">entrance.tiles</result>
            <result name="error" type="tiles">infopage.tiles</result>
            <result name="invalid.token" type="tiles">infopage.tiles</result>
        </action>
    </package>
</struts>